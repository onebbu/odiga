<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.odiga.mytrip.travel.dao.TravelDAO">


    <!-- 여행지 정보 가져오기 -->
    <select id="getTravelInfo" resultType="com.odiga.mytrip.vo.TravelListVO">
        SELECT *
        FROM TravelList
        WHERE contentId = #{contentId}
    </select>
    <!-- 페이지 방문후 뷰카운트 1증가 -->
    <select id="countPlusOne" resultType="com.odiga.mytrip.vo.TravelListVO">
        UPDATE TravelList
        SET TRAVELVIEWCOUNT = COALESCE(TRAVELVIEWCOUNT, 0) + 1
        WHERE contentId = #{contentId}
    </select>
</mapper>
